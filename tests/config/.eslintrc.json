{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "warn",
    "prefer-const": "error",
    "no-var": "error"
  },
  "globals": {
    "window": "readonly",
    "document": "readonly",
    "localStorage": "readonly",
    "fetch": "readonly",
    "FormData": "readonly",
    "CustomEvent": "readonly",
    "Event": "readonly",
    "markdownit": "readonly"
  }
}
